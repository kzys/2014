<div id="login">
  <div class="container">
    <h1>Login</h1>
    <%= form_for(:session, url: sessions_path) do |f| %>

    <table>
      <tr>
        <td><%= f.label :email %></td>
        <td><%= f.text_field :email %></td>
      </tr>

      <tr>
        <td><%= f.label :password %></td>
        <td><%= f.password_field :password %></td>
      </tr>

      <tr>
        <td></td>
        <td>
          <%= f.submit 'Login' %>
        </td>
      </tr>
    </table>

    <% end %>
  </div>
</div>
