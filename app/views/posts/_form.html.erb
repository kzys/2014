<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, :class => 'form-control', :size => '80x20' %>
  </div>

  <div class="form-group">
    <%= f.label :language %>
    <%= f.select :language, Post::CommonLanguages.keys.map {|k| [Post::CommonLanguages[k], k] } %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
