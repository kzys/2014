<h2><%= link_to_post post.title, post %></h2>
<div class="meta">
  <abbr title="<%= post.created_at %>"><%= time_ago_in_words(post.created_at) %> ago</abbr>

  <% if post.author and post.author == current_author %>
  <%= link_to 'Edit', edit_post_path(post) %>
  <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
</div>
<div><%= raw post.content_html %></div>
